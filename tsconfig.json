{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@shared/schema": ["./shared/schema.ts"],
      "@assets/*": ["./attached_assets/*"],
      "@server/*": ["./server/*"]
    }
  },
  "include": ["client/src", "server", "shared", "tests", "packages"],
  "exclude": ["node_modules", "build", "dist", "archive", "temp_repo"]
}
