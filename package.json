{
  "name": "terrafusion",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "electron-dev": "electron .",
    "electron-build": "next build && electron-builder",
    "electron-start": "electron .",
    "deploy": "node build.js"
  },
  "build": {
    "appId": "com.terrafusion.app",
    "productName": "TerraFusion",
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "out/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/assets/terrafusion-icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/assets/terrafusion-icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/assets/terrafusion-icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TerraFusion"
    }
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "framer-motion": "^11.0.3",
    "next": "14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "jest": "^29.7.0",
    "null-loader": "^4.0.1",
    "postcss": "^8.4.33",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
